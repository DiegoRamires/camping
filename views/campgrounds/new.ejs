<% include ../partials/header %>

<div class="container">
  <div class="row col-md-6 col-md-offset-2">
    <h1 class="text-center">Create a New Campground</h1>
    <div style="width: 30%">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Type the Campground Name">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" placeholder="What's the Price?" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="Place here the image URL">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Describe this Place">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>
<% include ../partials/footer %>
